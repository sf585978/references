journal = {Theory and Society},
keywords = {Ethnography,Object of analysis,Philosophy of science,Relational sociology},
pages = {547--579},
title = {{Relational ethnography}},
url = {http://scholar.harvard.edu/files/mdesmond/files/desmond.relational{\_}ethnography.pdf},
volume = {43},
year = {2014}
